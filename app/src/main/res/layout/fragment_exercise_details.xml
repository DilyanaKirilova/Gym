<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dkirilova.gym.fragments.ExerciseDetailsFragment">


    <ImageView
        android:id="@+id/ivEDImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnEDSelectPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select Photo"/>

    <EditText
        android:id="@+id/etEDName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:id="@+id/etEDLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Experience level"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusableInTouchMode="false" />

    <EditText
        android:id="@+id/etEDDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusableInTouchMode="false" />

    <Button
        android:id="@+id/btnEDSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGyms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
